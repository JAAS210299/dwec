{
  "compilerOptions": {
    "target": "ES2023",                      // O "ESNext"
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"]                 // Asegura compatibilidad con BigInt
  }
}
